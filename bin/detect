#!/bin/bash
# usage: bin/detect <build-dir>
set -euo pipefail # Enable bash strict mode (http://redsymbol.net/articles/unofficial-bash-strict-mode/)
#set -x # debug

BP=$(dirname $(dirname $0))
VERSION=`cat ${BP}/VERSION`

if [[ -z "${1:-}" ]]; then
	echo "Missing argument <build-dir>"
	exit 1
fi
BUILD=$(cd "${1:-}/" && pwd)

if [[ ! -f "${BUILD}/Logstash" ]]; then
	exit 1;
fi

echo "logstash ${VERSION}"
exit 0
